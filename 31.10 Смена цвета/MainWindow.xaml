<Window x:Class="_31._10_Смена_цвета.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_31._10_Смена_цвета"
        mc:Ignorable="d"
        Title="Change color" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Choose Color" Margin="30" FontSize="18">
            <StackPanel>
                <RadioButton x:Name="Red" Content="Red" Checked="Red_Checked"></RadioButton>
                <RadioButton x:Name="Green" Content="Green" Checked="Green_Checked"></RadioButton>
                <RadioButton x:Name="Blue" Content="Blue" Checked="Blue_Checked"></RadioButton>
            </StackPanel>
        </GroupBox>
        <Rectangle x:Name="ColorField" Grid.Column="1" Margin="30" Fill="White"></Rectangle>
    </Grid>
</Window>
